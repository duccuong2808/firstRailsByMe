					</li>
					<% end %>
				</ul>
				
				<!-- Filter container -->
				<div id="filter-container" class="cf">
					<% @post.each do |post| %>
					<figure class="<%= post.categories_id %>">
						<a href="/<%= post.id %>" class='thumb'>
							<img src="<%= post.pic.url %>" alt="alt">
						</a>
						<figcaption>
							<a href="/<%= post.id %>">
								<h3 class="heading"><%= post.title %></h3>
							</a>
							<%= post.summ %>
