					<!-- slider content --> 
					<div class="main-slider-content" >
					<ul class="sliders-wrap-inner">
						<% @post.each do |post| %>
					    <li>
					          <img src="<%= post.pic.url %>" title="" alt="alt" />           
					          <div class="slider-description">
					            <h4 style="font-size:15px;"><%= post.title %></h4>
					            <p><%= post.summ %>...
					            <a class="link" href="/<%= post.id %>">Read more </a>
					            </p>
					         </div>
					    </li>
					    <% end %>
					</ul>  	
					</div>
					<!-- ENDS slider content --> 
				           
					<!-- slider nav -->
					<div class="navigator-content">
					  <div class="navigator-wrapper">
					        <ul class="navigator-wrap-inner">
					        	<% @post.each do |post| %>
					        	<li><img src="<%= post.pic.url %>" alt="alt" style="max-width:250px;"></li>
					        	<% end %>
					        </ul>
					  </div>
					  <div class="button-next">Next</div>
